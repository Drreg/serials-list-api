{
  "manifest_version": 2,
  "name": "Serails Ext",
  "version": "1.0.5",
  "description": "Serails buttons.",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent",
    "storage",
    "<all_urls>"
  ]
}
